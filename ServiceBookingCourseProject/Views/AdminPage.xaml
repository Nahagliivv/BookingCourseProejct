        </TextBox>
        <TextBox Background="White" x:Name="TextBоxBookingServiceSearch" Text=""  HorizontalAlignment="Left" Height="25" TextWrapping="Wrap"  VerticalAlignment="Top" Width="199" Margin="47,518,0,0"  FontSize="15">
