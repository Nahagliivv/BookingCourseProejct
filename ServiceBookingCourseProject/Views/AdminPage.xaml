                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Button  Content="+" HorizontalAlignment="Left" Margin="137,425,0,0" VerticalAlignment="Top" Width="32" Height="25" IsDefault="True" Foreground="Black" FontSize="15" Background="white" Padding="0" Click="Button_Click">
