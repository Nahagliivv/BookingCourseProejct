        <TextBox Background="White" x:Name="TextBоxServicesSearch" Text=""  HorizontalAlignment="Left" Height="25" TextWrapping="Wrap"  VerticalAlignment="Top" Width="477" Margin="839,73,0,0"  FontSize="15">
